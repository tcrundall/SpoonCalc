##:kivy
#:import Factory kivy.factory.Factory
#:import LogsLayout spooncalc.screens.logsscreen.logslayout.LogsLayout

#:set pad "5dp"
#:set button_group_size_hint 1, 0.75
#:set label_color 1, 1, 1, 1
#:set label_background_color 0.3, 0.7, 0.9, 1
#:set button_spacing "5dp"
#:set toplevel_spacing "5dp"
#:set button_pad "2dp"

#:set font_size_title "40dp"
#:set font_size_heading_1 "24dp"
#:set font_size_heading_2 "18dp"
#:set font_size_button_1 "20dp"
#:set font_size_button_2 "16dp"
#:set font_size_contents "15dp"
#:set container_size_contents "30dp"        # double `font_size_contents`

<LogsScreen>:
    name: 'logsscreen'

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            Button:
                text: "<--"
                font_size: font_size_title
                size_hint: 0.2, 1
                on_release:
                    logs_display.decrement_day()
                    root.update_title(logs_display.current_day)
            Label:
                text: root.title
                id: logs_title
                font_size: font_size_title
                size_hint: 0.6, 1
            Button:
                text: "-->"
                font_size: font_size_title
                size_hint: 0.2, 1
                on_release:
                    logs_display.increment_day()
                    root.update_title(logs_display.current_day)
        ScrollView:
            size_hint: 1, 0.8
            do_scroll_y: True
            do_scroll_x: True
            LogsLayout:
                id: logs_display
                size_hint: 1, None
                height: self.minimum_height

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            Button:
                text: "Back"
                font_size: font_size_button_1
                on_release:
                    # root.manager.switch_screen("menuscreen")
                    root.switch_screen("menuscreen")

            Button:
                text: "Delete"
                font_size: font_size_button_1
                on_release:
                    logs_display.delete_entry()

