##:kivy
#:include spooncalc/constants.kv

<ImportScreen>:
    name: 'importscreen'
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, 0.1
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            Label:
                size_hint: None, None
                text: "Import filename: "
                size: self.texture_size
                height: container_size_contents
                font_size: font_size_contents
            TextInput:
                id: external_file
                size_hint: 1, None
                height: container_size_contents
                font_size: font_size_contents
                text: "spoon-output.csv"
        Label:
            size_hint: 1, 0.7
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            Button:
                text: "Cancel"
                font_size: font_size_button_1
                on_release:
                    root.manager.switch_screen("menuscreen")
            Button:
                text: "Import"
                font_size: font_size_button_1
                on_release:
                    root.on_import_press(external_file.text)
                    root.manager.get_screen("menuscreen").update_mean_and_spread()
                    root.manager.switch_screen("menuscreen")
