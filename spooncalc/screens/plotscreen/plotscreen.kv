##:kivy

<ToggleImage@Image>:
    size: 0.5 * self.parent.width, 0.5 * self.parent.height
    allow_stretch: True
    x: self.parent.x + 0.25 * self.parent.width
    y: self.parent.y + 0.4 * self.parent.height

<PlotToggle@LoadToggle>
    group: "plot"
    size_hint: 0.2, 1

<PlotScreen>:
    name: 'plotscreen'
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.plot_title
            id: plot_title
            font_size: font_size_title
            size_hint: 1, 0.1
        BoxLayout:
            id: graph
            size_hint: 1, 0.9
            padding: 10, 10, 0, 10
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Button:
                text: "<-"
                font_size: font_size_button_2
                size_hint: 0.1, 1
                on_release:
                    root.shift_window_left()
            PlotToggle:
                text: "Daily"
                id: daily
                on_release:
                    root.set_daily()
            PlotToggle:
                text: "Weekly"
                id: weekly
                state: "down"
                on_release:
                    root.set_weekly()
            PlotToggle:
                text: "Monthly"
                id: monthly
                on_release:
                    root.set_monthly()
            Button:
                text: "->"
                font_size: font_size_button_2
                size_hint: 0.1, 1
                on_release:
                    root.shift_window_right()
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            Button:
                text: "Back"
                font_size: font_size_button_1
                on_release:
                    root.manager.switch_screen("menuscreen")
