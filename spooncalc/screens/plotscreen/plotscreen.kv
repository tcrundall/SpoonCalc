##:kivy
#:include spooncalc/constants.kv

<ToggleImage@Image>:
    size: 0.5 * self.parent.width, 0.5 * self.parent.height
    allow_stretch: True
    x: self.parent.x + 0.25 * self.parent.width
    y: self.parent.y + 0.4 * self.parent.height

<PltQualifierToggle@ToggleButton>:
    font_size: font_size_button_3
    markup: True

<PlotToggle@LoadToggle>
    group: "plot"
    size_hint: 0.2, 1

<PlotScreen>:
    name: 'plotscreen'
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.plot_title
            id: plot_title
            font_size: font_size_title
            size_hint: 1, 0.1
        BoxLayout:
            id: graph
            size_hint: 1, 0.9
            padding: 10, 10, 0, 10
        BoxLayout:
            size_hint: 1, 0.2
            orientation: "vertical"
            padding: (hpad, vpad, hpad, vpad)
            BoxLayout:
                size_hint: 1, 0.5
                PltQualifierToggle:
                    id: necessary_plt
                    text: "necessary"
                PltQualifierToggle:
                    id: leisure_plt
                    text: "leisure"
                PltQualifierToggle:
                    id: rest_plt
                    text: "rest"
                PltQualifierToggle:
                    id: productive_plt
                    text: "productive"
                PltQualifierToggle:
                    id: social_plt
                    text: "social"
                PltQualifierToggle:
                    id: total_plt
                    text: "total"
            BoxLayout:
                size_hint: 1, 0.5
                PltQualifierToggle:
                    id: phone_plt
                    text: "phone"
                PltQualifierToggle:
                    id: screen_plt
                    text: "screen"
                PltQualifierToggle:
                    id: exercise_plt
                    text: "exercise"
                PltQualifierToggle:
                    id: physload_boost_plt
                    text: "boost"
                PltQualifierToggle:
                    id: misc_plt
                    text: "misc"
                PltQualifierToggle:
                    id: averaged_plt
                    text: "averaged"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            ToggleButton:
                id: spoons_plt
                text: "Spoons"
                group: "plot-yaxis"
                state: "normal"
            ToggleButton:
                id: hours_plt
                text: "Hours"
                group: "plot-yaxis"
                state: "down"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Button:
                text: "<-"
                font_size: font_size_button_2
                size_hint: 0.1, 1
                on_release:
                    root.shift_window_left()
            PlotToggle:
                text: "Daily"
                id: daily
                on_release:
                    root.set_daily()
            PlotToggle:
                text: "Weekly"
                id: weekly
                state: "down"
                on_release:
                    root.set_weekly()
            PlotToggle:
                text: "Monthly"
                id: monthly
                on_release:
                    root.set_monthly()
            Button:
                text: "->"
                font_size: font_size_button_2
                size_hint: 0.1, 1
                on_release:
                    root.shift_window_right()
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            Button:
                text: "Back"
                font_size: font_size_button_1
                on_release:
                    root.manager.switch_screen("menuscreen")
