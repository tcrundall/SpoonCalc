##:kivy
MainWidget:

#:set pad "5dp"
#:set button_group_size_hint 1, 0.75
#:set label_color 1, 1, 1, 1
#:set label_background_color 0.3, 0.7, 0.9, 1
#:set button_spacing "5dp"
#:set toplevel_spacing "15dp"
#:set button_pad "2dp"

<Option@BoxLayout>:
    orientation: "vertical"
    padding: (pad, pad, pad, pad)

<MainWidget>
    orientation: "vertical"
    spacing: toplevel_spacing
    BackgroundLabel:
        text: "Log activity"
        font_size: 20
        color: label_color
    TextInput:
        text: "Activity name"
        size_hint: 1, 0.3
        # width: 0.8 * root.width
    BoxLayout:
        orientation: "horizontal"
        # spacing: toplevel_spacing
        Option:
            orientation: "vertical" 
            padding: (pad, pad, pad, pad)
            BackgroundLabel:
                text: "Cog. Load"
                color: label_color
            BoxLayout:
                orientation: "horizontal"
                # spacing: button_spacing
                ToggleButton:
                    text: "Low"
                ToggleButton:
                    text: "Mid"
                ToggleButton:
                    text: "High"
        Option:
            BackgroundLabel:
                text: "Phys. Load"
                color: label_color
            BoxLayout:
                orientation: "horizontal"
                ToggleButton:
                    text: "Low"
                ToggleButton:
                    text: "Mid"
                ToggleButton:
                    text: "High"
    Option:
        orientation: "vertical"
        BackgroundLabel:
            text: "Duration"
            color: label_color
        BoxLayout:
            orientation: "horizontal"
            ToggleButton:
                text: "15"
            ToggleButton:
                text: "30"
            ToggleButton:
                text: "60"
            TextInput:
                text: "other"
    Option:
        orientation: "vertical"
        BackgroundLabel:
            text: "End Time"
            color: label_color
            halign: "left"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "-1"
            Button:
                text: "-0:15"
            BackgroundLabel:
                color: label_color
                text: "0:00"
            Button:
                text: "+0:15"
            Button:
                text: "+1"
    Option:
        orientation: "vertical"
        BackgroundLabel:
            text: "Energy Level"
            color: label_color
        BoxLayout:
            orientation: "horizontal"
            ToggleButton:
                text: "Low"
            ToggleButton:
                text: "Med"
            ToggleButton:
                text: "High"
    BoxLayout:
        size_hint: 1, 0.5
        orientation: "horizontal"
        Button:
            text: "Cancel"
        Button:
            text: "Save"

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: label_background_color
